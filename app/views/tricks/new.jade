extends ../layouts/default

block main
  .row
    .col-md-8
      form.form-horizontal(method="post", action='/trick/create', role="form")

        .form-group
          label.col-sm-2.control-label(for='title') Trick Title
          .col-sm-10
            input.form-control#title(type='text', name="title", value=trick.title, placeholder='Enter the title')

        .form-group
          label.col-sm-2.control-label(for='file') Original Url
          .col-sm-10
            input.form-control#title(type='text', name="title", value=trick.origin_url, placeholder='Enter the url')

        .form-group
          label.col-sm-2.control-label(for='desc') Description
          .col-sm-10
            textarea.form-control#desc(rows="5", name="body", placeholder='Give detailed description of the trick')=trick.body

        .form-group
          label.col-sm-2.control-label(for='tags') Tags
          .col-sm-10
            input.form-control#tags(type='text', name="tags", value=trick.tags, placeholder='Enter the tags, seperated with space')

        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type='submit') Save
            | &nbsp;
            a.btn(href='/articles', title="cancel") Cancel
